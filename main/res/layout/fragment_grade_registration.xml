<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Registrar Calificaciones"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPeriod"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_large"
                android:hint="@string/period">

                <AutoCompleteTextView
                    android:id="@+id/actPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_language"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/rgArea1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea1Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea1Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea1Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea1Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_math"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/rgArea2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea2Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea2Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea2Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea2Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_nature"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <RadioGroup
                        android:id="@+id/rgArea3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea3Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea3Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea3Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea3Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_social"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <RadioGroup
                        android:id="@+id/rgArea4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea4Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea4Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea4Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea4Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_art"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <RadioGroup
                        android:id="@+id/rgArea5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea5Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea5Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea5Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea5Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_physical"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <RadioGroup
                        android:id="@+id/rgArea6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">
                        <RadioButton android:id="@+id/rbArea6Support" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/requires_support" />
                        <RadioButton android:id="@+id/rbArea6Developing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/in_development" />
                        <RadioButton android:id="@+id/rbArea6Expected" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expected" />
                        <RadioButton android:id="@+id/rbArea6Outstanding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/outstanding" />
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="@dimen/margin_small"
                        android:hint="@string/observations">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etObservations6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/save_evaluation"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_large" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>