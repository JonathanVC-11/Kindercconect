<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:title="@string/nav_grades"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Alumno"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginBottom="@dimen/margin_small" />

            <Spinner
                android:id="@+id/spinnerPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large" />

            <!-- Área 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_language"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvArea1Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvArea1Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Repite para el resto (Área 2 a Área 6) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_math"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvArea2Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvArea2Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Área 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_nature"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:id="@+id/tvArea3Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea3Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Área 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_social"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:id="@+id/tvArea4Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea4Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Área 5 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_art"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:id="@+id/tvArea5Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea5Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Área 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_physical"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:id="@+id/tvArea6Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea6Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Empty message and loader -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay calificaciones disponibles para este periodo"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_secondary"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:padding="@dimen/padding_large" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
