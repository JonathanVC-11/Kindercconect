<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/nav_grades"
        app:titleTextColor="?attr/colorOnPrimary" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large"
            android:background="?attr/colorSurface">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nombre del Alumno"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="@dimen/margin_normal" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPeriod"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:hint="@string/period">

                <AutoCompleteTextView
                    android:id="@+id/actPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_language"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea1Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea1Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_math"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea2Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea2Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_nature"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea3Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea3Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_social"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea4Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea4Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_art"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea5Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea5Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_physical"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:id="@+id/tvArea6Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nivel"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_small" />
                    <TextView
                        android:id="@+id/tvArea6Observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Observaciones"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay calificaciones disponibles para este periodo"
                android:textSize="@dimen/text_size_large"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:padding="@dimen/padding_large" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>